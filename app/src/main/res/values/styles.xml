<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_round_notes_24</item>

    </style>

    <style name="CollapsingToolbarLayoutTitleColor" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/average_sans</item>


    </style>
    <style name="CollapsingToolbarLayoutTitleColor_Collapsed" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito</item>
    </style>

</resources>